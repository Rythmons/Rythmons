{
	"name": "rythmons",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F web db:push",
		"db:studio": "turbo -F web db:studio",
		"db:generate": "turbo -F web db:generate",
		"db:migrate": "turbo -F web db:migrate",
		"deploy": "pnpm dlx vercel deploy --cwd apps/web",
		"deploy:prod": "pnpm dlx vercel deploy --prod --cwd apps/web"
	},
	"dependencies": {},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@10.18.0"
}
