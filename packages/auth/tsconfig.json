{
	"devDependencies": {
		"@rythmons/tsconfig": "workspace:*"
	},
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"outDir": "dist",
		"rootDir": "src",
		"jsx": "react-jsx",
		"lib": [
			"ES2022",
			"DOM"
		],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"moduleResolution": "bundler"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"references": [
		{
			"path": "../db"
		}
	]
}