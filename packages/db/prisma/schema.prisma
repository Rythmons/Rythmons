generator client {
  provider = "prisma-client-js"

  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @map("_id")
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  role          UserRole?
  artists       Artist[]
  venues        Venue[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @map("_id")
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?


  @@map("verification")
}

model Artist {
  id               String   @id @default(cuid()) @map("_id")
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  stageName        String
  bio              String?
  website          String?
  socialLinks      Json?    @default("{}")
  genres           Genre[]
  
  techRequirements String?
  feeMin           Int?
  feeMax           Int?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("artist")
}

enum VenueType {
  BAR
  CLUB
  CONCERT_HALL
  FESTIVAL
  CAFE
  RESTAURANT
  CULTURAL_CENTER
  THEATER
  OPEN_AIR
  OTHER
}

enum UserRole {
  ARTIST
  ORGANIZER
  MEDIA
  TECH_SERVICE
  BOTH
}

model Venue {
  id            String    @id @default(cuid()) @map("_id")
  name          String
  address       String
  city          String
  postalCode    String
  country       String    @default("France")
  venueType     VenueType
  capacity      Int?
  description   String?   @db.Text
  photoUrl      String?
  logoUrl       String?
  images        String[]  @default([])
  paymentPolicy String?
  techInfo      String?
  ownerId       String
  owner         User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  genres        Genre[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("venue")
}

model Genre {
  id        String   @id @default(cuid()) @map("_id")
  name      String   @unique
  venues    Venue[]
  artists   Artist[]
  
  @@map("genre")
}
